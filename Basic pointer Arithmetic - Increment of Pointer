#include <iostream>
using namespace std;

int main() {
    int x=50;
    int *xptr;
    xptr=&x;
    cout<<x<<endl;
    cout<<xptr<<endl;
    cout<<*xptr<<endl;
    cout<<&x<<endl;
    xptr++;
    cout<<"Incremented value: "<<xptr<<endl;
    float y=24.5;
    float *yptr;
    yptr=&y;
    cout<<yptr<<endl;
    yptr++;
    cout<<"Increment float: "<<yptr<<endl;
    bool z=1;
    bool *zptr;
    zptr=&z;
    cout<<zptr<<endl;
    zptr++;
    cout<<"Increment bool: "<<zptr<<endl;
    double a=20;
    double *aptr;
    aptr=&a;
    cout<<aptr<<endl;
    aptr++;
    cout<<"Increment double: "<<aptr;
    
    return 0;
}
